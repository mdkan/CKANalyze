<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN"
        "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">

<!-- Configuration file for UrlRewriteFilter http://www.tuckey.org/urlrewrite/ -->
<urlrewrite use-query-string="true">
	<!-- Next to 0.1 mapping -->
	<rule>
		<from>/([0-9]\.[0-9]+)?/rest/(.*)$</from>
		<to type="redirect" encode="true" last="true">http://%{server-name}:%{port}/ckanalyze-web-$1/rest/$2</to>
	</rule>
	
	<!-- Version 0.1 mapping -->
	<rule>
		<from>/rest/</from>
		<to type="redirect" encode="true" last="true">http://%{server-name}:%{port}/ckanalyze-web-0.1/rest/</to>
	</rule>
</urlrewrite>